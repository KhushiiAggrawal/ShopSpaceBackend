import mongoose from "mongoose";

const orderStateSchema = new mongoose.Schema({
    value : {
        type : String,
        required : true
    },
    title : {
        type : String,
        required : true
    }
})

//created id from _id using virtual
const virtual = orderStateSchema.virtual("id");
virtual.get(function () {
  return this._id;
});

orderStateSchema.set("toJSON", {
  virtuals: true,
  versionKey: false,
  transform: (doc, ret) => {
    // 'doc' is the original document
    // 'ret' is the transformed object

    // Remove the '_id' field from the output
    delete ret._id;
  },
});



export const orderStateModel = mongoose.model("orderstates",orderStateSchema);